% Do not show "Chapter" each time
\def\@chapapp{}
% define chapter heading layout
\def\@makechapterhead#1{{\parindent0pt\raggedright\huge\bf\@chapapp{}\thechapter.\hskip15pt #1 \vskip15pt}}
% define chapter heading layout (when not numbered) make**S**chapterhead
\def\@makeschapterhead#1{{\parindent0pt\raggedright\huge\bf\@chapapp{}#1 \vskip15pt}}
\def\@makesectionhead#1{{\parindent0pt\raggedright\large\bf\@chapapp{}\thechapter\hskip15pt #1 \vskip15pt}}

% appendix command changes chapter headings to say "Appendix"
\def\appendix{\setcounter{chapter}{0}\setcounter{section}{0}\def\thechapter{\Alph{chapter}}\def\@chapapp{Appendix }}
\def\endappendix{\setcounter{chapter}{0}\setcounter{section}{0}\def\thechapter{\Alph{chapter}}\def\@chapapp{}}
