\def\chaptermark##1{\markboth{{Chapter \@chapapp\thechapter.\ ##1}}{}}
\def\sectionmark##1{\markright { \ifnum \c@secnumdepth >\z@ Section \thesection.\ ##1\fi }}}

% an emphasized box (a border, really)
\long\def\embox#1{{%
   \leavevmode\vskip-2mm\noindent
   \hbox to\textwidth{\hfill
      \fboxsep=5mm
      \fbox{
                        \hsize=\textwidth
                        \advance\hsize -2cm\noindent
                        \begin{minipage}{\hsize}
                \em #1
                        \end{minipage}
         \noindent}%
      \hfill}%
   \vskip1mm}\noindent}

